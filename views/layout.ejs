<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/bulma.min.css" />
    <title>Document</title>
    <style>
      .sidebar {
        width: 300px;
        height: 100vh;
      }
      .content {
        width: calc(100vw - 300px);
      }
    </style>
  </head>
  <body>
    <% if(alerts.success) {%> <% alerts.success.forEach(msg => { %>
    <div class="notification is-primary mb-0"><%= msg %></div>
    <% })%> <% } %> <% if(alerts.error) {%> <% alerts.error.forEach(msg => { %>
    <div class="notification is-danger mb-0"><%= msg %></div>
    <% })%> <% } %> <% if(alerts.warning) {%> <% alerts.warning.forEach(msg => {
    %>
    <div class="notification is-warning mb-0"><%= msg %></div>
    <% })%> <% } %>

    <div class="is-flex">
      <div class="sidebar has-background-black p-3">
        <nav>
          <ul class="has-text-white">
            <li><a href="/">Home</a></li>
            <li><a href="/students">Students</a></li>
            <li><a href="/students/new">Add Students</a></li>
            <hr />
            <li><a href="/students">Course</a></li>
            <li><a href="/students/new">Add Course</a></li>
            <hr />
            <li><a href="/auth/logout">Logout</a></li>
          </ul>
        </nav>
      </div>
      <div class="content"><%- body %></div>
    </div>
  </body>
</html>
