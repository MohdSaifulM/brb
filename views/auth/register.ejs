<div class="container">
  <div>
    <form method="POST" action="/auth/register">
      <div class="field">
        <input class="input" name="firstname" placeholder="firstname" />
      </div>
      <div class="field">
        <input class="input" name="lastname" placeholder="lastname" />
      </div>

      <div class="field">
        <input class="input" name="email" placeholder="email" />
      </div>

      <div class="field">
        <input
          class="input"
          name="password"
          placeholder="*****"
          type="password"
        />
      </div>
      <button type="submit">Sign Up</button>
    </form>
  </div>
</div>
